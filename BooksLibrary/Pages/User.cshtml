@page "{handler?}"
@model BooksLibrary.Pages.UserModel
@{
    ViewData["Title"] = "Users";
}
<div class="container">
    <h4>@ViewData["Title"]</h4>
    <div class="text-left container">
        <form asp-page="User">
            <div class="form-group">
                <label class="form-label" asp-for="UserName"></label>
                <input class="form-control" asp-for="UserName" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <button type="submit" class="btn btn-primary p-1">Add user</button>
        </form>
        <p class="text-success">@Model.Msg</p>
        @for (int i = 0; i < Model.Users.Count(); i++)
        {
        <div class="row p-1">
            <div class="col-4">               
                    @Model.Users[i].Name               
            </div>
            <div class="col-4">
                <form asp-page="user">
                    <button name="UserToDelete" asp-page-handler="delete" type="submit" class="btn btn-dark p-1" value="@Model.Users[i].Name">Delete user</button>
                </form>
            </div>
        </div>
         }          
     </div>
</div>